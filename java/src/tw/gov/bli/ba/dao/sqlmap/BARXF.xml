                    STS,         
                    SUBAMT,      
                    RBAMT,       
                    PRST,        
                    PRDTE,       
                    PRPNO,       
                    PRTMK,       
                    DATAKD      
            ) 
            values
            (
                   #rxfApNo:VARCHAR#,      
                   #rxfIdnNo:VARCHAR#,     
                   #rxfBrDate:VARCHAR#,    
                   #rxfName:VARCHAR#,      
                   #apNo:VARCHAR#,         
                   #seqNo:VARCHAR#,        
