    <select id="selectRxfApNoByApNo" resultMap="BARXFResult">
            Select  A.RXFAPNO,     
                    A.RXFIDNNO,    
                    A.RXFBRDATE,   
                    A.RXFNAME,     
                    A.APNO,        
                    A.SEQNO,       
                    A.BENIDNNO,    
                    A.BENBRDATE,   
                    A.BENNAME,     
                    A.EVTJOBDATE,  
                    A.DISPAYKIND,  
                    A.STS,         
                    A.SUBAMT,      
                    A.RBAMT,       
                    A.PRST,        
                    A.PRDTE,       
                    A.PRPNO,       
                    A.PRTMK,       
                    A.DATAKD      
              From  BARXF A, BCARF B
             where A.RXFAPNO = B.APNO
               AND A.APNO = #apNo:VARCHAR#
               AND A.SUBAMT > 0
               AND A.PRTMK = 'Y'
               AND (B.AMTTOT - B.AMTINC) >0
    </select>
    
    <select id="selectDataBy" resultMap="BARXFResult">
            Select  RXFAPNO,     
                    RXFIDNNO,    
                    RXFBRDATE,   
                    RXFNAME,     
                    APNO,        
                    SEQNO,       
                    BENIDNNO,    
                    BENBRDATE,   
                    BENNAME,     
                    EVTJOBDATE,  
                    DISPAYKIND,  
                    STS,         
                    SUBAMT,      
                    RBAMT,       
                    PRST,        
                    PRDTE,       
                    PRPNO,       
                    PRTMK,       
                    DATAKD      
              From  BARXF
             Where  RXFAPNO = #rxfApNo:VARCHAR#
               AND  APNO = #apNo:VARCHAR#
               AND  SEQNO = #seqNo:VARCHAR#
    </select>   
    
    <insert id="insertData">
            INSERT INTO BARXF
            (
                    RXFAPNO,     
                    RXFIDNNO,    
                    RXFBRDATE,   
                    RXFNAME,     
                    APNO,        
                    SEQNO,       
                    BENIDNNO,    
                    BENBRDATE,   
